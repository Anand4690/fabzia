<script>
  // ─── Data ───
  const squadSizes = ['5-a-side (5v5)', '7-a-side (7v7)', '8v8', '9-a-side (9v9)'];
  const baseSlots = [
    { id: 1, time: '16:00 to 16:30', price: 750, status: 'disabled' },
    { id: 2, time: '16:00 to 16:30', price: 750, status: 'disabled' },
    { id: 3, time: '16:00 to 16:30', price: 750, status: 'disabled' },
    { id: 4, time: '16:00 to 16:30', price: 750, status: 'disabled' },
    { id: 5, time: '16:00 to 16:30', price: 750, status: 'disabled' },
    { id: 6, time: '16:00 to 16:30', price: 750, status: 'disabled' },
    { id: 7, time: '16:30 - 17:00', price: 750, status: 'available' },
    { id: 8, time: '16:30 - 17:00', price: 750, status: 'selected' },
    { id: 9, time: '16:30 - 17:00', price: 750, status: 'selected' },
    { id: 10, time: '16:00 to 16:30', price: 750, status: 'partial-selected' },
    { id: 11, time: '16:00 to 16:30', price: 750, status: 'partial' },
    { id: 12, time: '16:00 to 16:30', price: 750, status: 'available' },
  ];

  // ─── State ───
  let selectedSquad = '5-a-side (5v5)';
  let selectedDateIndex = 0;
  let activeFilters = new Set();
  let slots = [...baseSlots];

  // ─── Functions ───
  function scrollCal(dir) {
    document.getElementById('cal-strip').scrollBy({ left: dir==='left' ? -200:200, behavior: 'smooth' });
  }

  function renderCalendar() {
    const strip = document.getElementById('cal-strip'); 
    const days = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
    const today = new Date();
    strip.innerHTML = '';
    for(let i=0; i<30; i++) {
      const d = new Date(); d.setDate(today.getDate() + i);
      // Logic from Figma node screenshots:
      // Mon 10 = Selected (Ring)
      // Tue 11 = Selected Day (Filled)
      // Wed 12 = Current Day (Dot below)
      const isSelected = i === 1; 
      const isRing = i === 0;
      const isCurrent = i === 2;
      
      const btn = document.createElement('button');
      btn.className = 'day-btn ' + (i>3?'rest':'');
      if (isCurrent) btn.classList.add('current');
      if (isSelected || isRing) btn.classList.add('selected-day');

      let circle = `<div class="date-plain">${d.getDate()}</div>`;
      if (isSelected) circle = `<div class="date-circle date-filled">${d.getDate()}</div>`;
      if (isRing) circle = `<div class="date-circle date-ring">${d.getDate()}</div>`;

      btn.innerHTML = `<span class="day-name">${days[d.getDay()]}</span>${circle}${isCurrent?'<div class="today-dot"></div>':''}`;
      strip.appendChild(btn);
    }
  }

  function renderSquad() {
    const row = document.getElementById('squad-row');
    row.innerHTML = '';
    squadSizes.forEach(s => {
      const b = document.createElement('button');
      b.className = 'squad-pill ' + (s===selectedSquad ? 'selected' : 'unselected');
      b.textContent = s;
      b.onclick = () => { selectedSquad = s; renderSquad(); };
      row.appendChild(b);
    });
  }

  function renderSlots() {
    const grid = document.getElementById('slot-grid');
    grid.innerHTML = '';
    slots.forEach(s => {
      const b = document.createElement('button');
      b.className = `slot-card ${s.status}`;
      b.onclick = () => toggleSlot(s.id);
      b.innerHTML = `<span class="slot-time">${s.time}</span><span class="slot-price">₹${s.price}</span>`;
      grid.appendChild(b);
    });
    updateBottom();
  }

  function toggleSlot(id) {
    const s = slots.find(x => x.id === id);
    if (!s || s.status === 'disabled') return;
    if (s.status === 'available') s.status = 'selected';
    else if (s.status === 'selected') s.status = 'available';
    else if (s.status === 'partial') s.status = 'partial-selected';
    else if (s.status === 'partial-selected') s.status = 'partial';
    renderSlots();
  }

  function updateBottom() {
    const sel = slots.filter(x => x.status === 'selected' || x.status === 'partial-selected');
    document.getElementById('slots-count-text').textContent = sel.length + ' Slots';
    document.getElementById('total-price-text').textContent = '₹' + (sel.reduce((a,b)=>a+b.price, 0));
  }

  function openBS(id) { 
    if(id === 'confirm') renderConfirm();
    document.getElementById('bs-'+id).classList.add('open'); 
    lucide.createIcons();
  }
  function closeBS(id) { document.getElementById('bs-'+id).classList.remove('open'); }

  function renderConfirm() {
    const list = document.getElementById('confirm-list');
    list.innerHTML = '';
    slots.filter(x=>x.status==='selected' || x.status==='partial-selected').forEach((s, i)=>{
      const row = document.createElement('div');
      row.className = 'px-4 py-2 border-b border-container-border flex flex-col gap-1';
      row.innerHTML = `<span class="text-sm font-medium text-text-heading">${s.time}</span><span class="text-xs text-text-body">7v7 (Half ${i%2+1})</span>`;
      list.appendChild(row);
    });
  }

  function toggleFilter(f) {
    if(activeFilters.has(f)) activeFilters.delete(f); else activeFilters.add(f);
    document.getElementById('chk-'+f).className = 'radio-btn ' + (activeFilters.has(f)?'active':'');
  }
  function resetFilters() { activeFilters.clear(); document.querySelectorAll('.radio-btn').forEach(x=>x.classList.remove('active')); }
  function handlePay() { window.location.href = 'Checkout.html'; }

  window.onload = () => { renderCalendar(); renderSquad(); renderSlots(); lucide.createIcons(); };
</script>

</body>
</html>
